# ============================================
# API Configuration
# ============================================
# Backend API base URL
VITE_API_URL=http://localhost:3000

# API request timeout in milliseconds (default: 30000 = 30 seconds)
VITE_API_TIMEOUT=30000

# API version (if your backend uses versioning)
VITE_API_VERSION=v1

# ============================================
# Socket Configuration
# ============================================
# WebSocket URL (defaults to API_BASE_URL if not set)
# VITE_SOCKET_URL=ws://localhost:3000

# ============================================
# App Configuration
# ============================================
VITE_APP_NAME=CRM Frontend
VITE_APP_VERSION=1.0.0

# ============================================
# Feature Flags
# ============================================
# Enable debug logging (true/false)
VITE_DEBUG=false

# Enable development tools (true/false)
VITE_DEV_TOOLS=false

# ============================================
# UI Configuration
# ============================================
# Default items per page for pagination
VITE_ITEMS_PER_PAGE=20
